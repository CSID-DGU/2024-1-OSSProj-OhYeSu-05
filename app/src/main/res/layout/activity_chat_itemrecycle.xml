<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="roomdata"
            type="com.example.testapplication.model.response.getroomlistresponse.Data" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/stroke_bottom_gray"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> viewModel.onRoomClicked(roomdata)}">

        <!-- 사용자의 이미지 -->
        <ImageView
            android:id="@+id/image_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/default_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 사용자의 이름 -->
        <!--이름을 @{roomdata.userName}와 같은 데이터 형식으로 변경필요        -->
        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/image_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 사용자의 특성 -->
        <!--특성부분 @{roomdata.userTrait}식으로 변경필요 -->
        <TextView
            android:id="@+id/text_user_trait"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="#흡연 #음주"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/image_user"
            app:layout_constraintTop_toBottomOf="@id/text_user_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 새 메시지 인디케이터 -->
        <ImageView
            android:id="@+id/new_message_indicator"
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/red_circle"
            android:visibility="@{roomdata.hasNewMessages ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintMarginEnd="16dp"
            app:layout_constraintMarginTop="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
