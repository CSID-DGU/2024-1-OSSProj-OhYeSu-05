<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="chatMessage"
            type="com.example.mytestapp.model.request.ChatMessage" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 매칭 요청 메시지 및 버튼 -->
        <FrameLayout
            android:id="@+id/match_request_chat_text_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatbox_sent"
            android:layout_gravity="end"
            android:layout_marginEnd="7dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상대가 매칭을 요청했습니다. \n해당 사용자와 매칭을 진행하시겠습니까?"
                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    android:paddingBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/chat_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/accept_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수락"/>

                    <Button
                        android:id="@+id/reject_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거절"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Sent Message Layout -->
        <LinearLayout
            android:id="@+id/layoutSentMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/chat_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/sent_chat_text_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chatbox_sent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="7dp">

                    <TextView
                        android:id="@+id/my_chat_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{chatMessage.content}"
                        android:fontFamily="@font/pretendard"
                        android:padding="10dp"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/my_chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{chatMessage.formattedTimestamp}"
                    android:fontFamily="@font/pretendard"
                    android:gravity="end"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- Received Message Layout -->
        <LinearLayout
            android:id="@+id/layoutReceivedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/chat_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/button_rec_blu" />

            <LinearLayout
                android:id="@+id/chat_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{chatMessage.senderName}"
                    android:fontFamily="@font/pretendard"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_main"
                    android:textSize="12sp" />

                <FrameLayout
                    android:id="@+id/received_chat_text_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chatbox_reception">

                    <TextView
                        android:id="@+id/chat_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{chatMessage.content}"
                        android:fontFamily="@font/pretendard"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_main" />
                </FrameLayout>

                <TextView
                    android:id="@+id/chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{chatMessage.formattedTimestamp}"
                    android:fontFamily="@font/pretendard"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_gravity="start" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
