<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="history"
            type="com.example.mytestapp.model.request.ChatHistory" />
        <variable
            name="viewModel"
            type="com.example.mytestapp.viewmodel.KiriViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@drawable/stroke_bottom_gray"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> viewModel.onProfileClicked(history)}">

        <!-- 사용자의 이미지 -->
        <ImageView
            android:id="@+id/image_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/default_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 사용자의 이름 -->
        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="@{history.userID}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_user"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 사용자의 특성 -->
        <TextView
            android:id="@+id/text_user_trait"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{history.lastMessage}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_user"
            app:layout_constraintTop_toBottomOf="@id/text_user_name" />

        <!-- 새 메시지 인디케이터 -->
        <ImageView
            android:id="@+id/new_message_indicator"
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/red_circle"
            android:visibility="@{history.hasNewMessages ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
